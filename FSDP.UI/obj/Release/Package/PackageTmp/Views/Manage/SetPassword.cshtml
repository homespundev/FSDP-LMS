@model FSDP.UI.Models.SetPasswordViewModel

<div class="container page text-center">
    <p class="text-info">
        You do not have a local username/password for this site. Add a local
        account so you can log in without an external login.
    </p>

    @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h1>Add Local Login</h1>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row justify-content-md-center">
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group col-md-2">
                <div>
                    <input type="submit" value="Change password" class="btn btn-default" />
                </div>
            </div>
            <div class="col-md-2">
                <span>
                    @Html.ActionLink("Cancel", "Index", "Manage", new { @class = "btn btn-cancel" })
                </span>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}