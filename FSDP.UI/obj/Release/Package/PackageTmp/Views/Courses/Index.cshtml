@model IEnumerable<FSDP.DATA.Course>

@{
    ViewBag.Title = "Courses";
}

<div class="container page">
    <h1 class="text-center">@ViewBag.Title</h1>
    @if (User.IsInRole("Admin"))
    {
        <h2>
            <a href="@Url.Action("Create")" class="fa fa-plus-square-o" title="Add New Course"> Course</a>
        </h2>
    }
    <table class="table">
        <thead>
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }
                
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseDescription)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>*@
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="manage">
                            <a href="@Url.Action("Edit", new { id= item.CourseID})" title="Edit" class="fa fa-pencil-square-o"></a> |
                            <a href="@Url.Action("Delete", new { id= item.CourseID} )" title="Delete" class="fa fa-trash"></a>
                        </td>
                    }
                    <td>
                        @Html.ActionLink(item.CourseName, "Details", new { id = item.CourseID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseDescription)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>*@
                </tr>
            }
        </tbody>

    </table>
</div>

@section scripts{
    }
