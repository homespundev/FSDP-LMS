@model FSDP.DATA.ClassSignUp

@{
    ViewBag.Title = "Edit Class Sign Up for " + Model.AspNetUser.FullName;
}


<div class="container page">
    @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 class="text-center">@ViewBag.Title</h1>
            <br /><br /><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ClassSignUpID)

            <div class="row justify-content-md-center">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.UserID, "Name", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.ClassDateID, "Class & Date", htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.DropDownList("ClassDateID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ClassDateID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-2 text-right">
                    <span>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </span>
                </div>
                <div class="col-md-2 text-left">
                    <span>
                        @Html.ActionLink("Cancel", "Index", "ClassSignUps", new { @class = "btn btn-cancel" })
                    </span>
                </div>
            </div>
        </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
