@model IEnumerable<FSDP.DATA.LessonView>

@{
    ViewBag.Title = "Lesson Views";
}
<div class="container">
    <h2>@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Add New Lesson View", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUser.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lesson.LessonTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateViewed)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a href="@Url.Action("Edit", new { id= item.LessonViewID})" class="fa fa-pencil-square-o"></a> |
                            <a href="@Url.Action("Delete", new { id= item.LessonViewID} )" class="fa fa-trash"></a>
                        </td>
                    }
                    <td>
                        @Html.ActionLink(item.AspNetUser.FullName, "Details", new { id = item.LessonViewID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lesson.LessonTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateViewed)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>