@model FSDP.UI.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit " + Model.FirstName + " " + Model.LastName;
}

<div class="container page">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 class="text-center">@ViewBag.Title</h1>
            <br />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <div class="row justify-content-md-center">
                <div class="form-group col-md-4">
                    @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                    <div>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                    <div>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.Label("Roles", new { @class = "control-label" })<br />
                    <span>
                        @foreach (var item in Model.RolesList)
                {
                            <input type="radio" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="radio-inline" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        }
                    </span>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="form-group col-md-4 text-center">
                    <span>
                        <input type="submit" value="Save" class="btn btn-default" />
                    </span>
                </div>
                <div class="col-md-4">
                    <span>
                        @Html.ActionLink("Cancel", "Index", "UsersAdmin", new { @class = "btn btn-cancel" })
                    </span>
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
