@model IEnumerable<FSDP.UI.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<div class="container page">
    <h1 class="text-center">@ViewBag.Title</h1>

    <h2>
        <a href="@Url.Action("Create")" class="fa fa-plus-square-o" title="Add New User"> User</a>
    </h2>
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    Name
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var fullName = item.FirstName + " " + item.LastName;
                <tr>
                    <td class="manage">
                        <a href="@Url.Action("Edit", new { id= item.Id})" title="Edit" class="fa fa-pencil-square-o"></a> |
                        <a href="@Url.Action("Delete", new { id= item.Id} )" title="Edit" class="fa fa-trash"></a>
                    </td>
                    <td>
                        @Html.ActionLink(fullName, "Details", new { id = item.Id })
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>
