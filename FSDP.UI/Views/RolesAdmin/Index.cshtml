@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}

<div class="container page">
    <h1 class="text-center">@ViewBag.Title</h1>

    <h2>
        <a href="@Url.Action("Create")" class="fa fa-plus-square-o" title="Add New Role"> Role</a>
    </h2>
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="manage">
                        <a href="@Url.Action("Edit", new { id= item.Id})" title="Edit" class="fa fa-pencil-square-o"></a> |
                        <a href="@Url.Action("Delete", new { id= item.Id} )" title="Delete" class="fa fa-trash"></a>
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
