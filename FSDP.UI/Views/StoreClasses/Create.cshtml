@model FSDP.DATA.StoreClass

@{
    ViewBag.Title = "Add Class";
}

<div class="container page">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 class="text-center">@ViewBag.Title</h1>
            <br /><br /><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.StoreClassID)

            <div class="row justify-content-md-4">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.ClassName, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.ClassDescription, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.ClassDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ClassDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-2 text-right">
                    <span>
                        <input type="submit" value="Add" class="btn btn-default" />
                    </span>
                </div>
                <div class="col-md-2 text-left">
                    <span>
                        @Html.ActionLink("Cancel", "Index", "StoreClasses", new { @class = "btn btn-cancel" })
                    </span>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
