@model IEnumerable<FSDP.DATA.StoreClass>

@{
    ViewBag.Title = "Store Classes";
}

<div class="container page">
    <h1 class="text-center">@ViewBag.Title</h1>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <h2>
            <a href="@Url.Action("Create")" class="fa fa-plus-square-o" title="Add New Class"> Class</a>
        </h2>
    }
    <table class="table">
        <thead>
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }

                <th>
                    @Html.DisplayNameFor(model => model.ClassName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassDescription)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                {
                        <td class="manage">
                            <a href="@Url.Action("Edit", new { id= item.StoreClassID})" title="Edit" class="fa fa-pencil-square-o"></a> |
                            <a href="@Url.Action("Delete", new { id= item.StoreClassID} )" title="Delete" class="fa fa-trash"></a>
                        </td> }
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassDescription)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
