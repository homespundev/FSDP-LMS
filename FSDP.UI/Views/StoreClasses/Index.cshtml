@model IEnumerable<FSDP.DATA.StoreClass>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                @*apply admin if on this th as well*@
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassDescription)
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (User.IsInRole("Admin"))
                {
                        <td>
                            <a href="@Url.Action("Edit", new { id= item.StoreClassID})" class="fa fa-pencil-square-o"></a> |
                            <a href="@Url.Action("Delete", new { id= item.StoreClassID} )" class="fa fa-trash"></a>
                        </td> }
                    <td>
                        @Html.ActionLink(item.ClassName, "Details", new { id = item.StoreClassID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassDescription)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
